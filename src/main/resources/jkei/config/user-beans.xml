<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="jkei.scoringsystem" />
    <context:annotation-config />
    <bean id="categoryNewService" class="jkei.scoringsystem.service.CategoryNewServiceImpl" />
    <bean id="categoryNewDao" class="jkei.scoringsystem.dao.CategoryNewDaoImpl" />
    <bean id="scoreService" class="jkei.scoringsystem.service.ScoreServiceImpl" />
    <bean id="scoreDao" class="jkei.scoringsystem.dao.ScoreDaoImpl" />
    <bean id="participantService" class="jkei.scoringsystem.service.ParticipantServiceImpl" />
    <bean id="participantDao" class="jkei.scoringsystem.dao.ParticipantDaoImpl" />
    <bean id="userService" class="jkei.scoringsystem.service.UserServiceImpl" />
    <bean id="userDao" class="jkei.scoringsystem.dao.UserDaoImpl" />
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="datasource" />
    </bean>
    <bean id="datasource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/scoring_system" />
